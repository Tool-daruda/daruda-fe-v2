{
	"name": "@repo/ui",
	"version": "0.0.0",
	"private": true,
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./foundations": {
			"types": "./dist/foundations/index.d.ts",
			"import": "./dist/foundations.js"
		},
		"./style.css": "./dist/ui.css"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "vite build",
		"dev": "rm -rf dist && vite build --watch",
		"lint": "eslint . --max-warnings 0",
		"generate:component": "turbo gen react-component",
		"check-types": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/node": "^22.15.3",
		"@types/react": "19.1.0",
		"@types/react-dom": "19.1.1",
		"@vanilla-extract/vite-plugin": "^5.1.1",
		"eslint": "^9.34.0",
		"typescript": "5.9.2",
		"vite": "^7.1.7",
		"vite-plugin-dts": "^4.5.4"
	},
	"dependencies": {
		"@vanilla-extract/css": "^1.17.4",
		"@vanilla-extract/dynamic": "^2.1.5",
		"@vanilla-extract/recipes": "^0.5.7",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"typesVersions": {
		"*": {
			"*": [
				"dist/*"
			]
		}
	}
}
