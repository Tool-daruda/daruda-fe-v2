{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["@vanilla-extract/css", "react", "react-dom", "node"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.css.ts.vanilla.css"]
}
